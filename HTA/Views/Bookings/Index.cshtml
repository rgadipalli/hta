@model PaginatedList<HTA.Models.Booking>

@{
    ViewData["Title"] = "Bookings";
}

<h2>Bookings</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().BookingID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().DevoteeMemID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().IsApproved)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().IsPaid)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().ApprovedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().ApprovedBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().DateCreated)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().LastModified)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().LastModifiedBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().IsActive)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().ReceiptId)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Devotee.First_Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookingID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DevoteeMemID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsApproved)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPaid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApprovedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApprovedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastModified)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastModifiedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReceiptId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Devotee.First_Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BookingID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BookingID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BookingID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
